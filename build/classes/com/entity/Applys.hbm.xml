<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.entity.Applys" table="applys" schema="SCOTT">
		<id name="applysid" type="java.lang.String">
			<column name="applysid" length="100" />
			<generator class="uuid.hex"></generator>
		</id>
		<property name="usersid" type="java.lang.String">
			<column name="usersid" length="50" />
		</property>
		<property name="petid" type="java.lang.String">
			<column name="petid" length="50" />
		</property>
		<property name="addtime" type="java.lang.String">
			<column name="addtime" length="50" />
		</property>
		<property name="status" type="java.lang.String">
			<column name="status" length="50" />
		</property>
		<property name="memo" type="java.lang.String">
			<column name="memo" length="50" />
		</property>
		<many-to-one name="users" column="usersid" class="com.entity.Users"
			fetch="join" insert="false" update="false" lazy="false" />
		<many-to-one name="pet" column="petid" class="com.entity.Pet"
			fetch="join" insert="false" update="false" lazy="false" />
	</class>
</hibernate-mapping>
