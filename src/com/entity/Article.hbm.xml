<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.entity.Article" table="article" schema="SCOTT">
		<id name="articleid" type="java.lang.String">
			<column name="articleid" length="100" />
			<generator class="uuid.hex"></generator>
		</id>
		<property name="title" type="java.lang.String">
			<column name="title" length="50" />
		</property>
		<property name="image" type="java.lang.String">
			<column name="image" length="50" />
		</property>
		<property name="contents" type="java.lang.String">
			<column name="contents" length="50" />
		</property>
		<property name="addtime" type="java.lang.String">
			<column name="addtime" length="50" />
		</property>
		<property name="hits" type="java.lang.String">
			<column name="hits" length="50" />
		</property>
	</class>
</hibernate-mapping>
