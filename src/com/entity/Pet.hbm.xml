<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.entity.Pet" table="pet" schema="SCOTT">
		<id name="petid" type="java.lang.String">
			<column name="petid" length="100" />
			<generator class="uuid.hex"></generator>
		</id>
		<property name="pno" type="java.lang.String">
			<column name="pno" length="50" />
		</property>
		<property name="petname" type="java.lang.String">
			<column name="petname" length="50" />
		</property>
		<property name="image" type="java.lang.String">
			<column name="image" length="50" />
		</property>
		<property name="cateid" type="java.lang.String">
			<column name="cateid" length="50" />
		</property>
		<property name="addtime" type="java.lang.String">
			<column name="addtime" length="50" />
		</property>
		<property name="hits" type="java.lang.String">
			<column name="hits" length="50" />
		</property>
		<property name="status" type="java.lang.String">
			<column name="status" length="50" />
		</property>
		<property name="contents" type="java.lang.String">
			<column name="contents" length="50" />
		</property>
		<many-to-one name="cate" column="cateid" class="com.entity.Cate"
			fetch="join" insert="false" update="false" lazy="false" />
	</class>
</hibernate-mapping>
